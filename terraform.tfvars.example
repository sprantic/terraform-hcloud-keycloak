# Hetzner Cloud API token
# Get this from: https://console.hetzner.cloud/projects
hcloud_token = "your-hcloud-token"

# SSH key name in Hetzner Cloud
# Upload your SSH key first at: https://console.hetzner.cloud/projects
hcloud_ssh_key = "your-shh-key-name"

# Server Configuration
server_name = "keycloak-idp"
server_type = "cpx11"
location = "nbg1"

# Domain Configuration
domain_name = "example.com"
keycloak_subdomain = "auth"

# Keycloak Configuration
keycloak_admin_user = "admin"
keycloak_admin_password = "your-password"

# System Configuration
# Generate with: mkpasswd -m sha-512 your-password
admin_crypted_passwd = "your-crypted-password"

# Optional: External Database Configuration
use_external_db = true
db_vendor = "postgres"
db_host = "your-db-host"
db_port = "5432"
db_name = "keycloak"
db_user = "keycloak"
keycloak_db_password = "your-db-password"

# Optional: IPv6 Support
enable_ipv6 = false

# Optional: Custom Keycloak Version
keycloak_version = "24.0.3"
